{
    "name": "acme/widget-sales-system",
    "description": "A proof of concept for Acme Widget Co's sales system.",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors tests/",
        "analyze": "phpstan analyze src/ --level 9"
    }
}